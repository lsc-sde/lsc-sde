{
    "id": "k3d",
    "version": "0.1.0",
    "name": "k3d",
    "documentationURL": "https://github.com/lsc-sde/lsc-sde/features/tree/main/features/k3d",
    "description": "Installs k3d onto the devcontainer",
    "options": {
        "hostVolumePath" : {
            "type": "string",
            "default": "/var/lib/rancher/k3s/storage"
        },
        "secretsPath" : {
            "type": "string",
            "default": "/var/lib/rancher/k3s/storage/secrets"
        },
        "installCalico" : {
            "type": "boolean",
            "default": true
        },
        "clusterName" : {
            "type": "string",
            "default": "devcontainer"
        },
        "disableTraefik" : {
            "type": "boolean",
            "default": true
        },
        "disableFlannel" : {
            "type": "boolean",
            "default": true
        },
        "disableLoadBalancer" : {
            "type": "boolean",
            "default": false
        },
        "registryPort" : {
            "type" : "string",
            "default" : "36471"
        }
    },
    "installsAfter" :[
        "ghcr.io/devcontainers/features/docker-in-docker"
    ],
	"postCreateCommand": "setup-k3d"
}